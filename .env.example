# Database Configuration (MongoDB Atlas recommended for production)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/homecare?retryWrites=true&w=majority

# Server Configuration
PORT=80
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ZNS Service Configuration (eSMS)
ESMS_API_KEY=your_esms_api_key_here
ESMS_API_SECRET=your_esms_secret_key_here
ESMS_ZNS_URL=https://rest.esms.vn/MainService.svc/json
ZNS_TEMPLATE_ID=your_template_id_here

# Application Settings
APP_NAME=Homecare API
APP_VERSION=1.0.0

# Vercel Deployment Notes:
# - PORT is managed by Vercel, no need to set
# - NODE_ENV should be 'production' on Vercel
# - All sensitive data should be set in Vercel Environment Variables
