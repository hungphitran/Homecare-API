# Database
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret
JWT_SECRET=your-secret-key

# Server
PORT=80

# Firebase Admin Service Account (Base64 encoded)
FIREBASE_SERVICE_ACCOUNT=your_base64_encoded_service_account_json

# Optional: Default FCM topic for broadcast
DEFAULT_FCM_TOPIC=homecare-broadcast

# Email Configuration for Reports
# SMTP Server settings
EMAIL_HOST=smtp.gmail.com          # SMTP server (Gmail, Outlook, etc.)
EMAIL_PORT=587                     # SMTP port (587 for TLS, 465 for SSL)
EMAIL_USER=your-email@gmail.com    # Your email address
EMAIL_PASS=your-app-password       # App password (for Gmail) or regular password

# Email addresses
EMAIL_FROM_ADDRESS=your-email@gmail.com     # From address
EMAIL_TO_ADDRESS=reports@homecare.com       # Where to send reports

# SMTP Configuration Examples:
# 
# Gmail:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password  # Generate app password in Google Account settings
#
# Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASS=your-password
#
# Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@yahoo.com
# EMAIL_PASS=your-app-password
#
# Custom SMTP:
# EMAIL_HOST=mail.yourdomain.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@yourdomain.com
# EMAIL_PASS=your-password